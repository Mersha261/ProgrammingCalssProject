@model ProgramingCalssProject.Models.ViewModel.ChangePass

@{
    ViewData["Title"] = "LogIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-12 bg-light">
    <div class="row">
        <div class="col-md-12">
            <div class="text-center green-theme mt-2">
                <strong class="w3-large">ورود به حساب کاربری</strong>
                <div class="green-line mt-2 mb-2"></div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 offset-md-3 padding-0">
            <div class="w3-round-medium mt-2 bg-white p-2 m-1">
                <form asp-action="ChengePass" asp-controller="Account" method="post">
                    <div class="form-group">
                        <label asp-for="OldPassword" class="control-label"></label>
                        <input asp-for="OldPassword" class="form-control" data-toggle="tooltip" data-placement="top" title="شماره موبایل را به صورت انگلیسی وارد نمایید مثال 09123456789 ، بعد از ثبت نام جهت تایید شماره موبایل شما پیامک تایید  برای شما ارسال میشود" />
                        <span asp-validation-for="OldPassword" class="text-danger w3-small"></span>
                    </div> 
                    <div class="form-group">
                        <label asp-for="NewPassword" class="control-label"></label>
                        <input asp-for="NewPassword" class="form-control" data-toggle="tooltip" data-placement="top" title="شماره موبایل را به صورت انگلیسی وارد نمایید مثال 09123456789 ، بعد از ثبت نام جهت تایید شماره موبایل شما پیامک تایید  برای شما ارسال میشود" />
                        <span asp-validation-for="NewPassword" class="text-danger w3-small"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmedPassword" class="control-label"></label>
                        <input asp-for="ConfirmedPassword" class="form-control" data-toggle="tooltip" data-placement="top" title="شماره موبایل را به صورت انگلیسی وارد نمایید مثال 09123456789 ، بعد از ثبت نام جهت تایید شماره موبایل شما پیامک تایید  برای شما ارسال میشود" />
                        <span asp-validation-for="ConfirmedPassword" class="text-danger w3-small"></span>
                    </div>
         
                    <div class="form-group">
                        <hr />
                        <input id="submitbtn" type="submit" value="تغییر کلمه عبور" class="btn btn-primary btn-sm" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

