@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProgrammingClassFirst</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/w3.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap-rtl.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProgrammingClassFirst.styles.css" asp-append-version="true" />
    <link href="~/slickslider/slick/slick.css" rel="stylesheet" />
    <link href="~/slickslider/slick/slick-theme.css" rel="stylesheet" />

</head>
<body>
    <div class="container-fluid">
        <div class="row bg-theme ">
            <div class="col-6">
                <div class="bg-theme" style=" background-color: #1a92bc !important;
    height: 46px;
    padding: 6px;
    width: 40px;
cursor:pointer;
display:inline-block">
                    <i class="fa fa-align-justify text-white"></i>

                </div>
                <div class="d-inline-block">
                    مرشا عزیز خوش آمدید
                </div>
            </div>
            <div class="col-4 text-left">
                <a class="btn btn-danger btn-sm m-2 text-white" asp-action="">خروج</a>
            </div>
        </div>

        <div style="background-color: #1a92bc;
    position: absolute;
    top: 47px;
    right: 15px;
    height: -webkit-fill-available;
    width: 250px;
    box-shadow:-3px 6px 7px 4px;">
            <div class="text-white p-2 w3-hover-teal">
                <i class="fa fa-dashboard fontsize-30"></i> <a href="#" asp-action="" class="text-white mr-2">داشبورد</a>
            </div>
            <div class="text-white p-2 w3-hover-teal">
                <i class="fa fa-chain fontsize-30"></i> <a href="#" asp-action="" class="text-white mr-2">صفحه اصلی</a>
            </div>
            <div class="text-white p-2 w3-hover-teal">
                <i class=" fa fa-check-square-o fontsize-30"></i> <a href="#" asp-action="" class="text-white mr-2">محصولات</a>
            </div>
            <div class="text-white p-2 w3-hover-teal">
                <i class="fa fa-info-circle fontsize-30"></i> <a href="#" asp-action="" class="text-white mr-2">درباره ما</a>
            </div>
            <div class="text-white p-2 w3-hover-teal">
                <i class="fa fa-phone-square fontsize-30"></i> <a href="#" asp-action="" class="text-white mr-2">تماس با ما</a>
            </div>
            <div class="text-white p-2 w3-hover-teal">
                <i class="fa fa-image fontsize-30"></i> <a href="#" asp-action="" class="text-white mr-2">بنر سایت</a>
            </div>
            <div class="text-white p-2 w3-hover-teal">
                <i class="fa  fa-dedent fontsize-30"></i> <a href="#" asp-action="" class="text-white mr-2">شهر ها</a>
            </div>
            <div class="text-white p-2 w3-hover-teal">
                <i class="fa fa-empire fontsize-30"></i> <a href="#" asp-action="" class="text-white mr-2">استان ها</a>
            </div>
            <div class="text-white p-2 w3-hover-teal">
                <i class="fa fa-gears fontsize-30"></i> <a href="#" asp-action="" class="text-white mr-2">تنظیمات پستی</a>
            </div>
            <div class="text-white p-2 w3-hover-teal">
                <i class="fa fa-gear fontsize-30"></i> <a href="#" asp-action="" class="text-white mr-2">تنظیمات</a>
            </div>
            <div class="text-white p-2 w3-hover-teal">
                <i class="fa fa-share-alt fontsize-30"></i> <a href="#" asp-action="" class="text-white mr-2">شبکه های اجتماعی</a>
            </div>
            <div class="text-white p-2 w3-hover-teal">
                <i class="fa fa-user-circle fontsize-30"></i> <a href="#" asp-action="" class="text-white mr-2">مدیریت کاربران</a>
            </div>
        </div>
    </div>
    <div class="container ">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/slickslider/slick/slick.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
