@model PgrogrammingClass.Core.Domain.TblAboutUs
@{
    ViewData["Title"] = "AboutUs";
}
<h1>درباره ما</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="AboutUs">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AboutUs" class="control-label"></label>
                <textarea asp-for="AboutUs" class="form-control"></textarea>
                <span asp-validation-for="AboutUs" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ContactUs" class="control-label"></label>
                <textarea asp-for="ContactUs" class="form-control"></textarea>
                <span asp-validation-for="ContactUs" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="AboutUsFooter" class="control-label"></label>
                <textarea asp-for="AboutUsFooter" class="form-control"></textarea>
                <span asp-validation-for="AboutUsFooter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumbers" class="control-label"></label>
                <textarea asp-for="PhoneNumbers" class="form-control"></textarea>
                <span asp-validation-for="PhoneNumbers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <textarea asp-for="Email" class="form-control"></textarea>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <textarea asp-for="Address" class="form-control"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        CKEDITOR.replace("AboutUs");
        CKEDITOR.replace("ContactUs");
        CKEDITOR.replace("AboutUsFooter");
    </script>
}
